<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.spring.jeff.mapper.UserMapper">
    <!-- 通过用户ID查找用户 -->
    <select id="selectUser" resultType="org.spring.jeff.domain.User">
        select * from user where id = #{id}
    </select>
</mapper>